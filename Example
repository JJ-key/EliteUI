-- EliteUI v3.6.0 Complete Example Script
-- This script demonstrates all available features including:
-- - Key System (optional, fetch keys from raw URL, saveable)
-- - Responsive UI sizing (auto-adjusts for PC vs Mobile)
-- - PC keybind support (RightShift to toggle by default)
-- - Smooth animations
-- - Theme customization
-- - Settings save/load system (automatic, no function call needed)
-- - Custom logo support
-- - Custom icons for tabs and sections
-- - Enhanced shadows and glow effects

-- Replace the URL below with your own hosted Loader URL
local EliteUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/JJ-key/EliteUI/refs/heads/main/Loader"))()

-- Create Window with all options
-- Settings tab is automatically created with every window!
local Window = EliteUI:CreateWindow({
    Name = "EliteUI Example",
    LoadingTitle = "Loading...",
    Subtitle = "v3.5",

    -- Snow Effect (optional)
    SnowEffect = {
        Enabled = true,
        ParticleCount = 50,
        Speed = 1,
        Glow = true
    },

    -- Key System (optional - can be disabled or removed entirely)
    KeySystem = {
        Enabled = true,
        URL = "https://raw.githubusercontent.com/JJ-key/Free-lock-script/refs/heads/main/Key",
        Title = "Key Required",
        Subtitle = "Enter your key to continue",
        NoteName = "key is a123",
        NoteURL = "https://discord.gg/abc1",
        SaveKey = true,
        FileName = "key.txt"
    },
    
    -- Custom toggle keybind (default is RightShift)
    ToggleKey = Enum.KeyCode.RightShift,
    
    -- Custom save folder and file
    SaveFolder = "EliteUIDemo",
    SaveFile = "config.json",
    
    -- Custom UI scale per device (optional)
    UIScale = {
        PC = 1.0,
        Mobile = 0.85,
        Tablet = 0.9
    },
    
    -- Animation settings (optional)
    Animation = {
        Enabled = true,
        Duration = 0.3
    },
    
    -- Custom theme colors (optional)
    -- Note: Users can change theme via the Settings button in user panel
    Theme = {
        Primary = Color3.fromRGB(139, 92, 246),
        Background = Color3.fromRGB(15, 15, 20),
        Secondary = Color3.fromRGB(30, 30, 40),
        Text = Color3.fromRGB(255, 255, 255),
        TextSecondary = Color3.fromRGB(156, 163, 175),
        Accent = Color3.fromRGB(168, 85, 247)
    }
})

-- Create Tabs (with built-in icons)
-- Available icons: home, settings, sword, shield, player, world, star, heart, 
-- gem, coin, bolt, code, script, folder, eye, lightning, fire, magic, pet, 
-- inventory, shop, trophy, crown, vip, and many more!
local MainTab = Window:CreateTab("Main", "home")
local CombatTab = Window:CreateTab("Combat", "sword")
local FarmTab = Window:CreateTab("Farm", "bolt")

-- ==========================================
-- SETTINGS TAB IS AUTOMATIC!
-- ==========================================
-- A Settings tab is automatically created with every window.
-- It includes theme customization, UI scale, notifications, and more.

-- ==========================================
-- Main Tab - Basic Components
-- ==========================================
MainTab:CreateSection("Welcome", "star")

MainTab:CreateParagraph({
    Title = "EliteUI v3.6.0",
    Content = "A modern, responsive UI library with PC & Mobile support, animations, and auto-save system. Settings tab is automatic!"
})

MainTab:CreateButton({
    Name = "Click Me",
    Callback = function()
        print("Button clicked!")
        Window:Notify({
            Title = "Success!",
            Content = "You clicked the button.",
            Duration = 3
        })
    end
})

local StatusLabel = MainTab:CreateLabel("Status: Ready")

MainTab:CreateTextBox({
    Name = "Username",
    Placeholder = "Enter username...",
    CurrentValue = "",
    Callback = function(Text, EnterPressed)
        print("Input:", Text)
        StatusLabel:SetText("Username: " .. Text)
    end
})

-- Toggle with auto-save using Flag
MainTab:CreateToggle({
    Name = "Auto Save Example",
    CurrentValue = false,
    Flag = "AutoSaveToggle",
    Callback = function(Value)
        print("Auto Save:", Value)
    end
})

-- ==========================================
-- Combat Tab - Advanced Components
-- ==========================================
CombatTab:CreateSection("Combat Features", "sword")

CombatTab:CreateToggle({
    Name = "Kill Aura",
    CurrentValue = false,
    Flag = "KillAura",
    Callback = function(Value)
        print("Kill Aura:", Value)
    end
})

CombatTab:CreateSlider({
    Name = "Attack Range",
    Min = 5,
    Max = 50,
    CurrentValue = 15,
    Flag = "AttackRange",
    Callback = function(Value)
        print("Range:", Value)
    end
})

CombatTab:CreateDropdown({
    Name = "Target Mode",
    Options = {"Nearest", "Lowest HP", "Random", "Manual"},
    CurrentValue = "Nearest",
    Flag = "TargetMode",
    Callback = function(Option)
        print("Selected:", Option)
    end
})

CombatTab:CreateKeybind({
    Name = "Toggle Aura",
    CurrentKeybind = Enum.KeyCode.E,
    Flag = "AuraKeybind",
    Callback = function(NewKey)
        print("New keybind:", NewKey.Name)
    end,
    HoldCallback = function()
        print("Keybind pressed!")
    end
})

-- ==========================================
-- Farm Tab - More Examples
-- ==========================================
FarmTab:CreateSection("Farming Options", "bolt")

FarmTab:CreateToggle({
    Name = "Auto Farm",
    CurrentValue = false,
    Flag = "AutoFarm",
    Callback = function(Value)
        print("Auto Farm:", Value)
    end
})

FarmTab:CreateSlider({
    Name = "Walk Speed",
    Min = 16,
    Max = 200,
    CurrentValue = 16,
    Flag = "WalkSpeed",
    Callback = function(Value)
        print("Walk Speed:", Value)
    end
})

FarmTab:CreateToggle({
    Name = "Auto Collect",
    CurrentValue = false,
    Flag = "AutoCollect",
    Callback = function(Value)
        print("Auto Collect:", Value)
    end
})

FarmTab:CreateDropdown({
    Name = "Farm Zone",
    Options = {"Zone 1", "Zone 2", "Zone 3", "Boss Area"},
    CurrentValue = "Zone 1",
    Flag = "FarmZone",
    Callback = function(Option)
        print("Farm Zone:", Option)
    end
})

-- ==========================================
-- Invisible Button (Optional)
-- ==========================================
local InvisibleBtn = Window:CreateInvisibleButton({
    Size = 70,
    TapCount = 2,
    SavePosition = true,
    Callback = function()
        Window:Notify({
            Title = "Success!",
            Content = "Secret button activated!",
            Duration = 3
        })
    end
})
