-- EliteUI Complete Example Script
-- This script demonstrates all available components
-- Replace the URL below with your own hosted Loader URL

local EliteUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/JJ-key/EliteUI/refs/heads/main/Loader"))()

-- Create Window
local Window = EliteUI:CreateWindow({
    Name = "EliteUI Demo Hub",
    LoadingTitle = "Loading...",
})

-- Create Tabs
local MainTab = Window:CreateTab("Main", "home")
local CombatTab = Window:CreateTab("Combat", "sword")
local SettingsTab = Window:CreateTab("Settings", "settings")

-- ==========================================
-- Main Tab - Basic Components
-- ==========================================
MainTab:CreateSection("Welcome")

MainTab:CreateParagraph({
    Title = "EliteUI Library",
    Content = "A modern, mobile-optimized UI library for Roblox with dark blue theme."
})

MainTab:CreateButton({
    Name = "Click Me",
    Callback = function()
        print("Button clicked!")
        Window:Notify({
            Title = "Success!",
            Content = "You clicked the button.",
            Duration = 3
        })
    end
})

local StatusLabel = MainTab:CreateLabel("Status: Ready")

MainTab:CreateTextBox({
    Name = "Username",
    Placeholder = "Enter username...",
    CurrentValue = "",
    Callback = function(Text, EnterPressed)
        print("Input:", Text)
        StatusLabel:SetText("Username: " .. Text)
    end
})

-- ==========================================
-- Combat Tab - Advanced Components
-- ==========================================
CombatTab:CreateSection("Combat Features")

CombatTab:CreateToggle({
    Name = "Kill Aura",
    CurrentValue = false,
    Callback = function(Value)
        print("Kill Aura:", Value)
    end
})

CombatTab:CreateSlider({
    Name = "Attack Range",
    Min = 5,
    Max = 50,
    CurrentValue = 15,
    Callback = function(Value)
        print("Range:", Value)
    end
})

CombatTab:CreateDropdown({
    Name = "Target Mode",
    Options = {"Nearest", "Lowest HP", "Random", "Manual"},
    CurrentValue = "Nearest",
    Callback = function(Option)
        print("Selected:", Option)
    end
})

CombatTab:CreateKeybind({
    Name = "Toggle Aura",
    CurrentKeybind = Enum.KeyCode.E,
    Callback = function(NewKey)
        print("New keybind:", NewKey.Name)
    end,
    HoldCallback = function()
        print("Keybind pressed!")
    end
})

CombatTab:CreateSection("Additional Options")

CombatTab:CreateToggle({
    Name = "Auto Farm",
    CurrentValue = false,
    Callback = function(Value)
        print("Auto Farm:", Value)
    end
})

CombatTab:CreateSlider({
    Name = "Walk Speed",
    Min = 16,
    Max = 200,
    CurrentValue = 16,
    Callback = function(Value)
        print("Walk Speed:", Value)
    end
})

-- ==========================================
-- Settings Tab - Customization Components
-- ==========================================
SettingsTab:CreateSection("Customization")

SettingsTab:CreateColorPicker({
    Name = "UI Accent Color",
    CurrentColor = Color3.fromRGB(59, 130, 246),
    Callback = function(Color)
        print("Color changed:", Color)
    end
})

SettingsTab:CreateDropdown({
    Name = "Theme",
    Options = {"Dark Blue", "Dark Purple", "Dark Green"},
    CurrentValue = "Dark Blue",
    Callback = function(Theme)
        print("Theme:", Theme)
    end
})

SettingsTab:CreateSection("Notifications")

SettingsTab:CreateToggle({
    Name = "Show Notifications",
    CurrentValue = true,
    Callback = function(Value)
        print("Notifications:", Value)
    end
})

SettingsTab:CreateButton({
    Name = "Show Test Notification",
    Callback = function()
        Window:Notify({
            Title = "Hello!",
            Content = "This is a notification from EliteUI.",
            Duration = 4
        })
    end
})

SettingsTab:CreateSection("Info")

SettingsTab:CreateLabel("EliteUI v2.0.0")

SettingsTab:CreateParagraph({
    Title = "About",
    Content = "Built for Roblox Mobile. Triple-tap with 3 fingers to toggle UI."
})
