-- EliteUI v3.2.0 Complete Example Script
-- This script demonstrates all available features including:
-- - Key System (optional, fetch keys from raw URL, saveable)
-- - Responsive UI sizing (auto-adjusts for PC vs Mobile)
-- - PC keybind support (RightShift to toggle by default)
-- - Smooth animations
-- - Theme customization
-- - Settings save/load system
-- - Custom logo support
-- - Custom icons for tabs and sections (NEW!)
-- - Enhanced shadows and glow effects (NEW!)

-- Replace the URL below with your own hosted Loader URL
local EliteUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/JJ-key/EliteUI/refs/heads/main/Loader"))()

-- Create Window with all options
local Window = EliteUI:CreateWindow({
    Name = "EliteUI litte example",
    LoadingTitle = "Loading...",
    Subtitle = "v3.1",

-- Snow Effect (optional)
    SnowEffect = {
        Enabled = true,
        ParticleCount = 50,  -- Number of snowflakes (default: 50)
        Speed = 1,           -- Fall speed multiplier (default: 1)
        Glow = true          -- Enable glow effect on snowflakes (default: true)
    },

    -- Key System (optional - can be disabled or removed entirely)
    KeySystem = {
        Enabled = true,
        URL = "https://raw.githubusercontent.com/JJ-key/Free-lock-script/refs/heads/main/Key",
        Title = "Key Required",
        Subtitle = "Enter your key to continue",
        NoteName = "key is a123",
        NoteURL = "https://discord.gg/abc1",
        SaveKey = true,
        FileName = "key.txt"
    },
    
    -- Optional: Custom logo (use Roblox asset ID)
    -- Logo = "rbxassetid://123456789",
    
    -- Custom toggle keybind (default is RightShift)
    ToggleKey = Enum.KeyCode.RightShift,
    
    -- Custom save folder and file
    SaveFolder = "EliteUIDemo",
    SaveFile = "config.json",
    
    -- Custom UI scale per device (optional)
    UIScale = {
        PC = 1.0,
        Mobile = 0.85,
        Tablet = 0.9
    },
    
    -- Animation settings (optional)
    Animation = {
        Enabled = true,
        Duration = 0.3
    },
    
    -- Custom theme colors (optional)
    Theme = {
        Primary = Color3.fromRGB(139, 92, 246),
        Background = Color3.fromRGB(15, 15, 20),
        Secondary = Color3.fromRGB(30, 30, 40),
        Text = Color3.fromRGB(255, 255, 255),
        TextSecondary = Color3.fromRGB(156, 163, 175),
        Accent = Color3.fromRGB(168, 85, 247)
    }
})

-- Create Tabs (with built-in icons)
-- Available icons: home, settings, sword, shield, player, world, star, heart, 
-- gem, coin, bolt, code, script, folder, eye, lightning, fire, magic, pet, 
-- inventory, shop, trophy, crown, vip, and many more!
local MainTab = Window:CreateTab("Main", "home")
local CombatTab = Window:CreateTab("Combat", "sword")

-- ==========================================
-- Settings Tab - Using CreateDefaultSettingsTab (RECOMMENDED)
-- ==========================================
-- Option 1: Quick one-liner with all default settings
-- This creates a complete settings tab with theme customization,
-- UI scale, size presets, notifications, data management, and info sections
local SettingsTab = Window:CreateDefaultSettingsTab()

-- Option 2: Customize which sections appear (uncomment to use instead)
--[[
local SettingsTab = Window:CreateDefaultSettingsTab({
    TabName = "Settings",                    -- Tab name (default: "Settings")
    TabIcon = "settings",                    -- Tab icon (default: "settings")
    ShowThemeCustomization = true,           -- Show color picker & theme presets
    ShowUIScale = true,                      -- Show UI scale slider
    ShowUISizePresets = true,                -- Show size preset dropdown
    ShowNotifications = true,                -- Show notification toggle & test
    ShowDataManagement = true,               -- Show clear settings button
    ShowControls = true,                     -- Show toggle key info
    ShowInfo = true,                         -- Show version & about
    Version = "1.0.0",                       -- Your script version
    AboutText = "My custom script description here.",
    CustomThemePresets = {                   -- Optional: custom color themes
        ["Ocean"] = Color3.fromRGB(6, 182, 212),
        ["Forest"] = Color3.fromRGB(34, 197, 94),
        ["Sunset"] = Color3.fromRGB(249, 115, 22)
    }
})
]]

-- Option 3: Manual settings tab (for full control - see commented code below)
-- You can still manually build a settings tab if you need complete control

-- ==========================================
-- Main Tab - Basic Components (with icon in section)
-- ==========================================
MainTab:CreateSection("Welcome", "star")  -- Using built-in icon

MainTab:CreateParagraph({
    Title = "EliteUI v3.0.0",
    Content = "A modern, responsive UI library with PC & Mobile support, animations, and save system."
})

MainTab:CreateButton({
    Name = "Click Me",
    Callback = function()
        print("Button clicked!")
        Window:Notify({
            Title = "Success!",
            Content = "You clicked the button.",
            Duration = 3
        })
    end
})

local StatusLabel = MainTab:CreateLabel("Status: Ready")

MainTab:CreateTextBox({
    Name = "Username",
    Placeholder = "Enter username...",
    CurrentValue = "",
    Callback = function(Text, EnterPressed)
        print("Input:", Text)
        StatusLabel:SetText("Username: " .. Text)
    end
})

-- Toggle with auto-save using Flag
MainTab:CreateToggle({
    Name = "Auto Save Example",
    CurrentValue = false,
    Flag = "AutoSaveToggle",
    Callback = function(Value)
        print("Auto Save:", Value)
    end
})

-- ==========================================
-- Combat Tab - Advanced Components (with icons in sections)
-- ==========================================
CombatTab:CreateSection("Combat Features", "sword")  -- Using built-in icon

CombatTab:CreateToggle({
    Name = "Kill Aura",
    CurrentValue = false,
    Flag = "KillAura",
    Callback = function(Value)
        print("Kill Aura:", Value)
    end
})

CombatTab:CreateSlider({
    Name = "Attack Range",
    Min = 5,
    Max = 50,
    CurrentValue = 15,
    Flag = "AttackRange",
    Callback = function(Value)
        print("Range:", Value)
    end
})

CombatTab:CreateDropdown({
    Name = "Target Mode",
    Options = {"Nearest", "Lowest HP", "Random", "Manual"},
    CurrentValue = "Nearest",
    Flag = "TargetMode",
    Callback = function(Option)
        print("Selected:", Option)
    end
})

CombatTab:CreateKeybind({
    Name = "Toggle Aura",
    CurrentKeybind = Enum.KeyCode.E,
    Flag = "AuraKeybind",
    Callback = function(NewKey)
        print("New keybind:", NewKey.Name)
    end,
    HoldCallback = function()
        print("Keybind pressed!")
    end
})

CombatTab:CreateSection("Additional Options", "bolt")  -- Using built-in icon

CombatTab:CreateToggle({
    Name = "Auto Farm",
    CurrentValue = false,
    Flag = "AutoFarm",
    Callback = function(Value)
        print("Auto Farm:", Value)
    end
})

CombatTab:CreateSlider({
    Name = "Walk Speed",
    Min = 16,
    Max = 200,
    CurrentValue = 16,
    Flag = "WalkSpeed",
    Callback = function(Value)
        print("Walk Speed:", Value)
    end
})

-- ==========================================
-- Adding Custom Elements to Default Settings Tab (Optional)
-- ==========================================
-- You can still add your own custom elements to the default settings tab!
-- The CreateDefaultSettingsTab returns the tab object, so you can use it like any other tab.

SettingsTab:CreateSection("Custom Script Settings")

SettingsTab:CreateToggle({
    Name = "Enable Debug Mode",
    CurrentValue = false,
    Flag = "DebugMode",
    Callback = function(Value)
        print("Debug Mode:", Value)
    end
})

-- ==========================================
-- MANUAL SETTINGS TAB EXAMPLE (For Reference)
-- ==========================================
-- If you prefer full control, you can still create a manual settings tab.
-- Just replace CreateDefaultSettingsTab() with CreateTab("Settings", "settings")
-- and add all elements yourself. The old code is preserved below as a reference:
--[[
local ManualSettingsTab = Window:CreateTab("Settings", "settings")

ManualSettingsTab:CreateSection("Theme Customization")

ManualSettingsTab:CreateColorPicker({
    Name = "UI Accent Color",
    CurrentColor = Color3.fromRGB(59, 130, 246),
    Flag = "AccentColor",
    Callback = function(Color)
        Window:SetTheme({ Primary = Color })
    end
})

ManualSettingsTab:CreateDropdown({
    Name = "Theme Preset",
    Options = {"Dark Purple", "Violet", "Dark Green", "Dark Red"},
    CurrentValue = "Dark Purple",
    Flag = "ThemePreset",
    Callback = function(Theme)
        local themes = {
            ["Dark Purple"] = Color3.fromRGB(139, 92, 246),
            ["Violet"] = Color3.fromRGB(168, 85, 247),
            ["Dark Green"] = Color3.fromRGB(34, 197, 94),
            ["Dark Red"] = Color3.fromRGB(239, 68, 68)
        }
        Window:SetTheme({ Primary = themes[Theme] })
    end
})

ManualSettingsTab:CreateSection("UI Configuration")

ManualSettingsTab:CreateSlider({
    Name = "UI Scale",
    Min = 50,
    Max = 150,
    CurrentValue = 100,
    Flag = "UIScale",
    Callback = function(Value)
        Window:SetScale(Value / 100)
    end
})

ManualSettingsTab:CreateSection("Data Management")

ManualSettingsTab:CreateButton({
    Name = "Clear All Saved Settings",
    Callback = function()
        Window:ClearSettings()
        Window:Notify({
            Title = "Settings Cleared",
            Content = "All saved settings have been deleted.",
            Duration = 3
        })
    end
})
]]

local InvisibleBtn = Window:CreateInvisibleButton({
    Size = 70,                    -- Button size in pixels
    TapCount = 2,                 -- Taps required to trigger
    SavePosition = true,          -- Save position between sessions
    Callback = function()          -- Callback function
        Window:Notify({
            Title = "Success!",
            Content = "Secret button is working! completed successfully.",
            Duration = 3
        })
    end
})
